<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/detail_img"
            android:layout_width="@dimen/item_img_size_big"
            android:layout_height="@dimen/item_img_size_big"
            android:layout_gravity="top"
            android:src="@drawable/ic_image_placeholder" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_text_margin"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/game_title"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="@dimen/item_title_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detail_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/game_theme"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="@dimen/item_title_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detail_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/game_location"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/default_text_size"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/item_text_margin"
                    android:text="@string/game_date"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/default_text_size"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/detail_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dummy"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/default_text_size"
                    android:textStyle="italic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/item_time_icon_size"
                    android:layout_height="@dimen/item_time_icon_size"
                    android:layout_gravity="top"
                    android:layout_marginRight="@dimen/item_text_margin"
                    android:src="@drawable/ic_time" />

                <TextView
                    android:id="@+id/detail_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/game_time"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_text_margin"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detail_description"
            style="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/game_description_dummy"
            android:textColor="@color/dark_grey"
            android:textIsSelectable="true"
            android:textSize="@dimen/default_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/item_text_margin"
                android:text="@string/game_difficulty"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/default_text_size"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/detail_difficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dummy"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/default_text_size"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/item_text_margin"
                android:text="@string/game_count_of_players"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/default_text_size"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/detail_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dummy"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/default_text_size"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/item_text_margin"
                android:text="@string/game_price"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/default_text_size"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/item_text_margin"
                android:text="@string/dummy"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/default_text_size"
                android:textStyle="italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/game_price_dimen"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/default_text_size"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detail_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/item_text_margin"
                android:text="@string/game_link"
                android:textColor="@color/blue"
                android:textSize="@dimen/default_text_size"
                android:textStyle="italic" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
