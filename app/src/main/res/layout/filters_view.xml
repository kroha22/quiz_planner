<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="@dimen/_16sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/filter"
            android:textSize="@dimen/item_stamp_text_size"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/filter_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:src="@drawable/ic_navigate_next"
            android:tint="@color/blue" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@color/dark_grey" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_8sdp">

        <CheckedTextView
            android:id="@+id/filter_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_8sdp"
            android:background="@drawable/bg_author_btn"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingTop="@dimen/_4sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:text="@string/online" />

        <CheckedTextView
            android:id="@+id/filter_offline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_author_btn"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingTop="@dimen/_4sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:text="@string/offline" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/_8sdp">

        <CheckedTextView
            android:id="@+id/filter_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_8sdp"
            android:background="@drawable/bg_author_btn"
            android:checked="true"
            android:paddingLeft="@dimen/_14sdp"
            android:paddingTop="@dimen/_4sdp"
            android:paddingRight="@dimen/_14sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:text="@string/all_location_games" />

    </LinearLayout>

</LinearLayout>
